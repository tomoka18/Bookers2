<div class="container px-5 px-sm-0">
  <div class="row">
  <%= render 'books/book', books: @books %>

    <div class="col-md-8 offset-md-1">

　　　<h2>Book detail</h2>
　　　<table class="table">
　　　  <tbody>
　　　    <% @books.each do |book| %>
　　　    <tr>
　　　      <td>
　　　        <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.png",size: "30x30" %><br>
              <%= link_to current_user.name, user_path(current_user) %>
　　　      </td>
　　　      <td><%= link_to book.title, "/books/#{book.id}" %></td>
　　　      <td><%= @book.body %></td>
　　　      <td>
　　　        <% if @book.user == current_user %>
  　 　　　　　　　　<%= link_to "edit", book_path(@book), method: :update%>
  　　　　　　　 　　　<% end %>
  　　　　　　　 　　　</td>
　　　      <td>
　　　        <% if @book.user == current_user %>
  　 　　　　　　　　<%= link_to "削除", book_path(@book), method: :delete %>
  　　　　　　　　　　<% end %>
　　　      </td>
　　　    </tr>
　　　    <% end %>
　　　  </tbody>
　　　</table>


    </div>
  </div>
</div>

