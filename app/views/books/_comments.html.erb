<% book.book_comments.each do |book_comment| %>

　　　      <tr>
      　　　    <td>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, fallback: "no_image.png",size: "30x30" %><br>
                  <%= link_to book_comment.user.name, user_path(user) %>
      　　　    </td>
      　　　    <td>
                  <%= book_comment.comment %>
      　　　    </td>
      　　　    <td>
      　　　      <% if book_comment.user == current_user %>
                  <div class="comment-delete">
                  <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class:'btn btn-danger', remote: true %>
                  </div>
                  <% end %>
      　　　    </td>
  　　　       </tr>

         <% end %>