<div class="container px-5 px-sm-0">
  <div class="row">
  <%= render 'books/book', books: @books %>

    <div class="col-md-8 offset-md-1">

 <h2>Books</h2>
  <table class="table table-hover table-invers">
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
　　　　<% @books.each do |book| %>
            <tr>

                <td><%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, fallback: "no_image.png",size: "30x30" %></td>
                <td><%= link_to book.title, "/books/#{book.id}" %></td>
                <td><%= book.body %></td>
            </tr>
        <% end %>
    </tbody>
  </table>


    </div>
  </div>
</div>