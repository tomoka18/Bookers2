    <div class="col-md-3">

     <h2>User info</h2>
     <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.png",size: "70x70" %>
     <table class="table">
       <tr>
        <th>name</th>
        <th><%= @user.name %></th>
       </tr>
       <tr>
         <th>introduction</th>
         <th><%= @user.introduction %></th>
       </tr>
     </table>

     <div>
       <% if @user.id == current_user.id %>
       <%= link_to edit_user_path(@user) do %>
   　　　 <i class="btn btn-outline-secondary btn-block fas fa-user"></i>
   　　　 <% end %>

       <% end %>
     </div>





         <h1>New Book</h1>
     <%= form_with model: @book, local:true do |f| %>
       <h4>Title</h4>
       <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %></br>
      <%= f.submit 'Create Book' %>
       <% end %>

    </div>
