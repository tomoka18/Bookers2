<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-3">
      <h2>User info</h2>
      <h2>User info</h2>
  <%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>

  <%= attachment_image_tag @user, :image, :fill, 60, 60, fallback: "no_image.png"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.attachment_field :profile_image, placeholder: "Image" %>



  <%= f.submit "変更を保存" %>
  <% end %>
    </div>

    <div class="col-md-8 offset-md-1"></div>

  </div>
</div>


<% @books.each do |book| %>
<div>
  <p>ユーザーネーム：<%= book.user.name %></p>
  <p><%= book.title %></p>
  <p><%= book.body %></p>
</div>
<% end %>

